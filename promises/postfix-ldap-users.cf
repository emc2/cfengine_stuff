server_host = $(ldap_config.ldap_server_uri)
search_base = ou=people,$(ldap_config.ldap_base)
version = 3
bind = no
#sasl_mechs = GSSAPI
sasl_realm = $(kerberos_config.realm)
scope = sub
query_filter = mail=%s@metricspace.net
result_attribute = maildrop
tls_ca_cert_file = /etc/ssl/certs/ca-cert.pem
tls_cert = /etc/ssl/certs/mail-cert.pem
tls_key = /etc/ssl/private/postfix-key.pem
tls_require_cert = yes
